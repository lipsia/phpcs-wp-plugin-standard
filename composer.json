{
  "name": "lipsia/phpcs-wp-plugin-standard",
  "description": "A custom phpcs ruleset for WordPress plugin development.",
  "type": "phpcodesniffer-standard",
  "license": "MIT",
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Lipsia Digital GmbH",
      "email": "info@lipsia.digital"
    }
  ],
  "require": {
    "php": "^7.3"
  },
  "require-dev": {
    "automattic/phpcs-neutron-standard": "^1.5",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "squizlabs/php_codesniffer": "^3.5",
    "phpcompatibility/phpcompatibility-paragonie": "^1.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  }
}
